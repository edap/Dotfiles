# Set to this to use case-sensitive completion
# CASE_SENSITIVE="true"

# Comment this out to disable weekly auto-update checks
# DISABLE_AUTO_UPDATE="true"

# Disable autocorrection
DISABLE_CORRECTION="true"

# Change this value to set how frequently ZSH updatesÂ¬
export UPDATE_ZSH_DAYS=13
alias ga='git add .'
alias gA='git add -A'
alias gp='git push'
alias gfp='git ftp push'
alias gl='git log'
alias gs='git status'
alias gd='git diff'
alias gdc='git diff --cached'
alias gm='git commit -m'
alias gma='git commit -am'
alias gb='git branch'
alias gc='git checkout'
alias gra='git remote add'
alias grr='git remote rm'
alias gpu='git pull'
alias gcl='git clone'
alias killrails='kill -INT $(cat tmp/pids/server.pid)'
alias heute='date +"%Y-%m-%d-%H-%M"'
alias gctrlz='git reset --hard HEAD@{1}'
alias glast='git show --pretty="format:" --name-only'
alias glog="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative"
alias gitk='gitk --all'

#alias for copy and paste
alias pbcopy='xclip -selection clipboard'
alias pbpaste='xclip -selection clipboard -o'
# Uncomment following line if you want to disable colors in ls
